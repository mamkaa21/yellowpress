<Window x:Class="wpf_1135_EF_sample.WinYellowPressEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_1135_EF_sample"
        mc:Ignorable="d"
        Title="WinYellowPressEditor" Height="450" Width="800">
    <StackPanel>
        <Label Content="Название статьи"/>
        <TextBox Text="{Binding Singer.Firstname}"/>
        <Label Content="Содержание статьи"/>
        <TextBox Text="{Binding Singer.Lastname}"/>
        <Label Content="Певец"/>
        <ComboBox DisplayMemberPath="Singer" ItemsSource="{Binding Singers}" />
        <Button Content="Сохранить и закрыть" Click="SaveClose"/>
    </StackPanel>
</Window>
